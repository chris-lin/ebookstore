extends layout

block books
	- for (var books in entry)
		.row
			.span2.margin
				.img-regulate
					img(src='#{entry[books].link[1].href}')
			.span6.margin.padding.left-border
					h4
						strong 書名：
						|  #{entry[books].title}
					p
						strong 作者：
						if entry[books].author
							|  #{entry[books].author.name}
						else
							|  Anonymous
					p
						strong 上傳日期：
						|  #{entry[books].updated}
					p
						strong 摘要：
						|  #{entry[books].summary}

block category
	ul.nav.nav-list.bs-docs-sidenav.affix
		- for (var key in categories)
			li
				p.catalog
					a.category(value='#{categories[key].link.href}', href='#')
						i= categories[key].title
